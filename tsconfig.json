{
  "compilerOptions": {
	"target": "ES2020",
	"lib": ["dom", "dom.iterable", "esnext"],
	"allowJs": true,
	"skipLibCheck": true,
	"strict": true,
	"forceConsistentCasingInFileNames": true,
	"noEmit": true,
	"incremental": true,
	"esModuleInterop": true,
	"resolveJsonModule": true,
	"module": "esnext",
	"moduleResolution": "node",
	"isolatedModules": true,
	"jsx": "preserve"
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}